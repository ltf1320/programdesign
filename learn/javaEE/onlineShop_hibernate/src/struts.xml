<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
          "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="default" namespace="/" extends="struts-default">
		<action name="search" class="shop.SearchAction" method="execute">
			<result name="success">/display.jsp</result>
			<result name="input">/index.jsp</result>
		</action>
		<action name="new" class="shop.newAction" method="execute">
			<result name="success">/index.jsp</result>
			<result name="input">/newgoods.jsp</result>
		</action>
		<action name="delete" class="shop.deleteAction" method="execute">
			<result name="success">/display.jsp</result>
			<result name="input">/display.jsp</result>
		</action>
		<action name="update" class="shop.updateAction" method="execute">
			<result name="success">/update.jsp</result>
			<result name="input">/display.jsp</result>
		</action>
		<action name="doUpdate" class="shop.doUpdateAction" method="execute">
			<result name="success">/display.jsp</result>
			<result name="input">/update.jsp</result>
		</action>
	</package>
</struts>

